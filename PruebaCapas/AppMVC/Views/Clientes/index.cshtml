@model AppMVC.Models.ClientesModel
@{

    ViewBag.Title = "Clientes";
}

<h2>Clientes</h2>

@using (Html.BeginForm("Insertar", "Clientes", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

   <dl class="dl-horizontal">
        <dt>
            @Html.LabelFor(model => model.NroCliente)
            @Html.TextBoxFor(model => model.NroCliente)
        </dt>

        <dd>
            @Html.LabelFor(model => model.RazonSocial)
            @Html.TextBoxFor(model => model.RazonSocial)
        </dd>

        <dt>
            @Html.LabelFor(model => model.Domicilio)
            @Html.TextBoxFor(model => model.Domicilio)
        </dt>

        

    </dl>
    
    <p> <input type="submit" value="Enviar formulario" /> </p>

}

